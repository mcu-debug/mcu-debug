// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/mcu-debug"],//, "--unhandled-rejections=strict" ],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/packages/mcu-debug/dist/*.js"
			],
      "preLaunchTask": "npm: compile"
    },
		{
			"name": "Debug Server",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [ "--nolazy", "--trace-warnings"],//, "--unhandled-rejections=strict" ],
			"program": "${workspaceRoot}/packages/mcu-debug/dist/adapter.js",
			"stopOnEntry": false,
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/packages/mcu-debug/dist/*.js"
			],
			"cwd": "${workspaceRoot}/packages/mcu-debug"
		},
		{
			"name": "Launch Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/mcu-debug", "--extensionTestsPath=${workspaceRoot}/packages/mcu-debug/out/test/suite/index" ],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/packages/mcu-debug/out/test/**/*.js"
			],
			"preLaunchTask": "test-compile"
		}
	],
	"compounds": [
		{
			"name": "Extension + Debug Server",
			"configurations": ["Launch Extension", "Debug Server"]
		}
	]
}

