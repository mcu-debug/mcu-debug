// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.1.0",
	"configurations": [	
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/mcu-debug"],//, "--unhandled-rejections=strict" ],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/packages/mcu-debug/dist/*.js"
			],
      		// "preLaunchTask": "npm: compile"
    	},
		{
			"name": "Debug Server",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [ "--nolazy", "--trace-warnings"],//, "--unhandled-rejections=strict" ],
			"program": "${workspaceRoot}/packages/mcu-debug/dist/adapter.js",
			"stopOnEntry": false,
			"args": [ "--server=4721" ],
			"env": {
				"RUST_BACKTRACE": "1",
				"PROD_MCU_DEBUG_HELPER": "0"
			},
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/packages/mcu-debug/dist/*.js"
			],
      		// "preLaunchTask": "npm: compile"
		},
		{
			"name": "Launch Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/mcu-debug", "--extensionTestsPath=${workspaceRoot}/packages/mcu-debug/out/test/suite/index" ],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/packages/mcu-debug/out/test/**/*.js"
			],
			"preLaunchTask": "test-compile"
		},
		{
            "type": "lldb",
            "request": "launch",
            "name": "Launch mcu-debug-helper",
            "cargo": {
				"cwd": "${workspaceFolder}/packages/mcu-debug-helper",
                "args": [
                    "build",
                    "--bin=mcu-debug-helper" // Replace 'yourprogram' with your actual binary name
                ]
            },
            "program": "${cargo:program}",
            // "args": ["--timing", "--rtt-search", "${workspaceFolder}/mylfs/stm32f429-rtt.elf"],
            "args": ["--timing", "--rtt-search", "${workspaceFolder}/mylfs/proj_cm4.elf"],
            "cwd": "${workspaceFolder}/packages/mcu-debug-helper",
            "console": "internalConsole"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach mcu-debug-helper",
            "program": "${workspaceFolder}/packages/mcu-debug/bin/mcu-debug-helper",
            "sourceLanguages": ["rust"]
        }
	],
	"compounds": [
		{
			"name": "Extension + Debug Server",
			"configurations": ["Launch Extension", "Debug Server"],
      		"preLaunchTask": "compile"
		}
	]
}

