{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "dependsOn": [
        "npm: watch"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "compile",
      "dependsOn": [
        "npm: compile"
      ],
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": [
        "$rustc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/packages/mcu-debug-helper",
        "env": {
          "RUSTFLAGS": "-C debuginfo=2"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "rust: cargo build"
    }
  ]
}
