{
  "name": "mcu-debug-monorepo",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/mcu-debug"
  ],
  "scripts": {
    "watch": "npm run watch --workspaces",
    "build": "npm run build --workspaces",
    "compile": "./scripts/install-hooks.sh && npm run compile --workspaces",
    "prepare": "./scripts/install-hooks.sh",
    "build:types": "./scripts/generate-types.sh",
    "build:go": "cd packages/proxy-server && make build",
    "build:extensions": "npm run build --workspace=packages/mcu-debug --workspace=packages/mcu-debug-proxy",
    "package": "./scripts/package-extensions.sh",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "esbuild": "^0.19.0"
  }
}
